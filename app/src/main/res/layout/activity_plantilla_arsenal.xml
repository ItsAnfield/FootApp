<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D63636"
    tools:context=".PlantillaArsenal">

    <Button
        android:id="@+id/btnporterosArsenal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="149dp"
        android:backgroundTint="@color/white"
        android:textColor="#CF2323"
        android:text="Porteros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDefensaArsenal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="#CF2323"
        android:layout_marginStart="149dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="151dp"
        android:text="Defensas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnporterosArsenal" />

    <Button
        android:id="@+id/btnCentrocampistasArsenal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:backgroundTint="@color/white"
        android:textColor="#CF2323"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="114dp"
        android:text="Centrocampistas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDefensaArsenal" />

    <Button
        android:id="@+id/btnDelanterosArsenal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:backgroundTint="@color/white"
        android:textColor="#CF2323"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="140dp"
        android:text="Delanteros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCentrocampistasArsenal" />
</androidx.constraintlayout.widget.ConstraintLayout>